<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    tools:ignore="MissingPrefix">


    <FrameLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ListHolderTvVesselType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:text="PASSENGER"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/ListHolderTvVesselName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MV MARY JOY"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/ListHolderTvVesselOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM : ZAMBOANGA CITY" />


            <TextView
                android:id="@+id/ListHolderTvVesselDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="DESTINATION : LAMITAN CITY" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ListHolderIVvesselImage"
            android:scaleType="fitXY"
            android:src="@drawable/zz"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:layout_width="110dp"
            android:layout_height="110dp" />


    </FrameLayout>
</android.support.v7.widget.CardView>