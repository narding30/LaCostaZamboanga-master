<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorLigthPrimary"
            android:text="Philippine Coast Guard Hotline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_PhoneCall"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_pcg_hotline"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_phone_white_24dp" />

        <ImageButton
            android:id="@+id/btn_MobileCall"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_pcg_hotline"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_phone_iphone_white_24dp" />

    </LinearLayout>
</LinearLayout>